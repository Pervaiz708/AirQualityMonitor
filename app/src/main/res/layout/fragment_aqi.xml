<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.piyushsatija.pollutionmonitor.view.fragment.AQIFragment">

        <TextView
            android:id="@+id/aqiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:text="@string/aqi_title"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/aqiTextView"
            app:layout_constraintEnd_toEndOf="@+id/aqi_background"
            app:layout_constraintStart_toStartOf="@+id/aqi_background" />

        <TextView
            android:id="@+id/aqiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aqiTitle"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            android:elevation="2dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/aqi_background"
            app:layout_constraintEnd_toStartOf="@id/view"
            app:layout_constraintStart_toStartOf="@id/aqi_background"
            app:layout_constraintTop_toTopOf="@+id/aqi_background"
            tools:text="123" />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="@id/aqiTextView"
            app:layout_constraintEnd_toEndOf="@+id/aqi_background"
            app:layout_constraintStart_toStartOf="@+id/aqi_background"
            app:layout_constraintTop_toBottomOf="@+id/aqiTextView"
            app:layout_constraintTop_toTopOf="@id/aqiTextView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/temperatureIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:elevation="2dp"
            android:padding="2dp"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@id/aqi_background"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/view"
            app:srcCompat="@drawable/ic_temperature"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/temperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:text="@string/place_holder"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/aqi_background"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toBottomOf="@id/temperatureIcon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aqi_background"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/locationIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_location"
            android:tint="@color/white"
            app:layout_constraintEnd_toStartOf="@id/locationTextView"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aqi_background"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/locationIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/locationIcon"
            app:layout_constraintTop_toTopOf="@id/locationIcon"
            tools:text="New Delhi" />

        <include
            android:id="@+id/aqiInfoCard"
            layout="@layout/layout_aqi_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationTextView" />

        <include
            android:id="@+id/airPropertiesLayout"
            layout="@layout/layout_air_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aqiInfoCard" />

        <TextView
            android:id="@+id/pollutantsTitleTextView"
            style="@style/TextAppearanceHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/pollutants_aqi"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/airPropertiesLayout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pollutantsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/pollutantsTitleTextView" />

        <include
            android:id="@+id/rateUsCard"
            layout="@layout/layout_rate_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/pollutantsRecyclerView" />

        <include
            android:id="@+id/attributionCard"
            layout="@layout/layout_attributions_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rateUsCard"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>